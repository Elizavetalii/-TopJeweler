from django_filters import rest_framework as filters
from .models import Products, Categories, Stores

class ProductFilter(filters.FilterSet):
    category = filters.ModelChoiceFilter(queryset=Categories.objects.all())
    store = filters.ModelChoiceFilter(queryset=Stores.objects.all())
    min_price = filters.NumberFilter(field_name='price', lookup_expr='gte')
    max_price = filters.NumberFilter(field_name='price', lookup_expr='lte')
    name = filters.CharFilter(field_name='name', lookup_expr='icontains')

    class Meta:
        model = Products
        fields = ['category', 'store', 'min_price', 'max_price', 'name']